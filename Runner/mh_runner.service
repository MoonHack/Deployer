[Unit]
Description=MH Runner
After=network.target

[Service]
Type=simple
ExecStart=/home/runner/Runner/build/simple_master 64
WorkingDirectory=/home/runner/Runner/build
ExecStartPre=/home/runner/Runner/prepare.sh
Restart=always
User=runner
Group=runner
PermissionsStartOnly=true

[Install]
WantedBy=multi-user.target
